<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jem.temidayo.myrestuarant">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyRestuarant">
        <activity
            android:name=".PhoneVerification"
            android:label="Phone Verification" />
        <activity android:name=".RegisterActivity"
            android:label="Registration"/>
        <activity
            android:name=".appIntro.AppfeaturesPager"
            android:theme="@style/SplashScreen" />
        <activity
            android:name=".appIntro.SplashScreenActivity"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="Dashboard" />
        <activity
            android:name=".SigninActivity"
            android:label="Signin"
            android:theme="@style/SplashScreen"
            />
    </application>

</manifest>